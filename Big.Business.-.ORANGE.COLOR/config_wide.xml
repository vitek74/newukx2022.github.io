<?xml version="1.0" encoding="utf-8" ?>
<cu3er>
  <settings>
    <description>
      <defaults round_corners="0, 0, 0, 0" 
      
    heading_font="Times New Roman"
    heading_text_size="22"
    heading_text_color="0xFFFFFF"			
    heading_text_margin="10, 0, 0,10"	

    paragraph_font="Arial"
    paragraph_text_size="13"
    paragraph_text_color="0xffffff"
    paragraph_text_margin="10, 0, 0, 10"		
	/>
      
    </description>
	
	
    <auto_play>
      <defaults symbol="circular" time="5" />
      <tweenIn x="30" y="30" width="35" height="35" tint="0xFFFFFF" />
    </auto_play>
    <prev_button>
      <defaults round_corners="25,25,25,25"/>
      <tweenOver tint="0xFFFFFF" scaleX="1.1" scaleY="1.1"/>
      <tweenOut tint="0x000000" />
    </prev_button>
    <prev_symbol>
      <tweenOver tint="0x000000" />
      <defaults type="5" />
    </prev_symbol>
    <next_button>
      <defaults round_corners="25,25,25,25"/>
      <tweenOver tint="0xFFFFFF"  scaleX="1.1" scaleY="1.1"/>
      <tweenOut tint="0x000000" />
    </next_button>
    <next_symbol>
      <tweenOver tint="0x000000" />
      <defaults type="5" />
    </next_symbol>
  </settings>
  <slides>
    <slide>
      <url>images/s_1.jpg</url>
      <link target="_self">your_page_link.htm</link>
      <description>
        <link target="_self">another_page_link.htm</link>
        <heading>Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet</heading>
        <paragraph>Morbi interdum mollis sapien. Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet, lectus arcu pulvinar risus</paragraph>
      </description>
    </slide>
    <!-- changing transition between first & second slide -->
    <transition num="3" slicing="vertical" direction="down"/>
    <slide>
      <url>images/s_2.jpg</url>
      <description>
        <link target="_self">another_page_link.htm</link>
        <heading>Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet</heading>
        <paragraph>Morbi interdum mollis sapien. Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet, lectus arcu pulvinar risus</paragraph>
      </description>
    </slide>
    <!-- changing transition between second & third slide -->
    <transition num="4" direction="right" shader="flat" />
    <slide>
      <url>images/s_3.jpg</url>
      <description>
        <link target="_self">another_page_link.htm</link>
        <heading>Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet</heading>
        <paragraph>Morbi interdum mollis sapien. Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet, lectus arcu pulvinar risus</paragraph>
      </description>
    </slide>
    <!-- transitions properties defined in transitions template -->
    <slide>
      <url>images/s_4.jpg</url>
      <description>
        <link target="_self">another_page_link.htm</link>
        <heading>Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet</heading>
        <paragraph>Morbi interdum mollis sapien. Sed ac risus. Phasellus lacinia, magna a ullamcorper laoreet, lectus arcu pulvinar risus</paragraph>
      </description>
    </slide>
  </slides>
</cu3er>
